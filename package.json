{
  "name": "unified-theme",
  "version": "1.0.0",
  "description": "A reusable UI theme system independent of backend frameworks",
  "main": "dist/unified-theme.js",
  "style": "dist/unified-theme.css",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "css",
    "scss",
    "theme",
    "design-system",
    "ui",
    "components",
    "framework-agnostic"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/unified-theme.scss dist/unified-theme.css --style=expanded && sass src/unified-theme.scss dist/unified-theme.min.css --style=compressed",
    "build:js": "webpack --mode=production",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "watch:css": "sass src/unified-theme.scss dist/unified-theme.css --watch",
    "watch:js": "webpack --mode=development --watch",
    "serve": "live-server docs --port=3000 --open=/index.html",
    "test": "echo \"Tests will be implemented\" && exit 0",
    "lint": "stylelint src/**/*.scss",
    "format": "prettier --write \"src/**/*.{js,scss,css,json}\"",
    "clean": "rimraf dist/*",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/asiya-farseen/unified-theme.git"
  },
  "bugs": {
    "url": "https://github.com/asiya-farseen/unified-theme/issues"
  },
  "homepage": "https://github.com/asiya-farseen/unified-theme#readme",
  "author": "Asiya Farseen"
}